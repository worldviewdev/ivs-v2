RewriteEngine On

# Block access to index files - return 403 Forbidden
RewriteRule ^index\.(php|html|htm)$ - [F,L]
RewriteRule ^v1/index\.(php|html|htm)$ - [F,L]

# Redirect root directory to v1
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^(.*)$ /v1/ [L,R=301]

# Redirect any request that doesn't start with v1/ to v1/
RewriteCond %{REQUEST_URI} !^/v1/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /v1/$1 [L,R=301]